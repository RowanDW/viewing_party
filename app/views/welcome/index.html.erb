<div class="container mt-5">
  <div class="d-flex justify-content-center" >
    <div class="card" style="width: 50rem;">
      <div class="card-body">
        <div id='welcome' class="card-block text-center">
          <h1 class="card-title">Welcome to Viewing Party</h1>
          <p class="card-title" style="font-size: 20px">Explore movies!</p>
          <p class="card-title" style="font-size: 20px">Create a viewing party event for you and your friends to watch a movie together</p>
          <br>
        </div>

        <% if current_user %>
          <div class='btn-md text-center'>
            <%= button_to 'My Dashboard', dashboard_path, method: :get, class: "btn btn-outline-dark" %>
            <br>
            <%= button_to 'Log Out', logout_path, method: :delete , class: "btn btn-outline-dark"%>
          </div>
        <% else %>

          <div id='log_in' class="container mt-2">
            <div class="d-flex justify-content-center" >
              <div class="card" style="width: 25rem;">
                <div class="card-body">
                  <div class="card-block text-center">
                    <h3>Log In</h3>
                  </div>
                  <%= form_with url: login_path, local: true, method: :post do |form| %>
                    <div class="mb-3">
                      <%= form.label :email, 'Email:' %>
                      <%= form.text_field :email, class: "form-control" %>
                    </div>

                    <div class="mb-3">
                      <%= form.label :password, 'Password:' %>
                      <%= form.password_field :password, class: "form-control"%>
                    </div>
                    <div class='text-center'>
                      <%= form.submit 'Log In', class: "btn btn-outline-dark" %>
                    </div>
                  <% end %>
                  <br>
                  <div class="text-center">
                    <%= link_to 'New to Viewing Party? Register Here', registration_path, class: "link-dark" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
