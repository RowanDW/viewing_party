<h1>Movies Index</h1><br/>


  <%= button_to "Find Top Rated Movies",  movies_path, method: :get %>
  <%= form_with url: movies_path, method: :get, local: true do |f| %>
    <%= f.label :query, "search" %><br/><br/>
    <%= f.text_field :query, required: true %><br/><br/>

    <%= f.submit 'Find Movies' %>
  <% end %>

  <% if @movies.empty? %>
    <p>No movies found</p>
  <% else %>
    <% @movies.each do |movie| %>
      <p><%= link_to movie[:title], movie_path(movie[:id]) %></p>
    <% end %>
  <% end %>
