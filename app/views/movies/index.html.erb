<div class="container mt-4">
  <h1 class= "text-center">Movies Index</h1><br/>
  <div class=" d-flex justify-content-center">
    <%= button_to "Find Top Rated Movies",  movies_path, method: :get %>
    <h4 class="mx-3"> OR </h4>
    <%= form_with url: movies_path, method: :get, local: true, class: "form-inline" do |f| %>
      <div class=" mb-3" style="display: inline-block; float: left;">
        <%= f.text_field :query, placeholder: "Find Movies", class:"form-control", required: true %><br/><br/>
      </div>
      <div class="m-1" style="display: inline-block; float: left;">
        <%= f.submit 'Search', class: "btn-default" %>
      </div>
    <% end %>
  </div>

  <% if @movies.empty? %>
    <p class="text-center">No movies found</p>
  <% else %>
    <div class="row">
      <% @movies.each do |movie| %>
        <div class="col-2 d-flex align-items-stretch mb-3">
          <div class="card" style="width: 10rem;">
            <a href="/movies/<%= movie[:id] %>" class="flex-fill" >
              <img src= "https://image.tmdb.org/t/p/w342/<%= movie[:poster_path] %>" class="card-img-top" alt= "<%= movie[:title] %>" >
            </a>
            <div class="card-body d-flex flex-column p-1">
              <p class="card-text text-center" style="font-size: 14px"><%= movie[:title] %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
