<br/><br/><br/>
<%= button_to "Find Top Rated Movies",  movies_path, method: :get %><br/><br/><br/>

<% if @movies.count == 0 %>
  <h4>OR</h4><br/>
<% end %><br/><br/>

<%= form_with url: movies_path, method: :get, local: true do |f| %>
  <%= f.text_field :query, placeholder: 'Search by Title', required: true %><br/><br/>

  <%= f.submit 'Find Movies' %>
<% end %><br/><br/>

<% if @movies.count == 40 %>
  <h2>Top 40 Movies</h2><br/>
  <% @movies.each do |movie| %>
  <tr>
    <td><%= link_to movie[:title], movie_path(movie[:id]) %></td><br/>
  </tr>
  <% end %>
<% elsif @movies.count == 0 %>
  <h2>No movies found</h2><br/>
<% elsif %>
  <h2>Search Results</h2><br/>
  <% @movies.each do |movie| %>
  <tr>
    <td><%= link_to movie[:title], movie_path(movie[:id]) %></td>
  </tr>
  <% end %>
<% end %>
