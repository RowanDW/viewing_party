<br/><br/>
<%= button_to "Find Top Rated Movies",  movies_path, method: :get %><br/>

<% if @movies.count == 0 %>
  <h4>OR</h4><br/>
<% end %><br/><br/>

<%= form_with url: movies_path, method: :get, local: true do |f| %>
  <%= f.text_field :query, placeholder: 'Search by Title', required: true %><br/><br/>

  <%= f.submit 'Find Movies' %>
<% end %><br/><br/>

<% if @movies.count == 40 %>
  <h3>Top 40 Movies</h3><br/>
  <% @movies.each do |movie| %>
  <tr>
    <td><%= link_to movie[:title], movie_path(movie[:id]) %> -- <%= movie[:vote_average] %> rating</td><br/>
  </tr>
  <% end %>
<% elsif @movies.count == 0 %>
  <h3>No movies found</h3><br/>
<% elsif %>
  <h3>Search Results</h3><br/>
  <% @movies.each do |movie| %>
  <tr>
    <td><%= link_to movie[:title], movie_path(movie[:id]) %> -- <%= movie[:vote_average] %> rating</td><br/>
  </tr>
  <% end %>
<% end %>
